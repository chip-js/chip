{
  "name": "chip-js",
  "version": "2.0.0",
  "dependencies": {
    "fragments-js": "~0.2.5"
  },
  "scripts": {
    "build": "browserify --debug --standalone chip index.js -o dist/chip.js",
    "watch": "watchify --debug --standalone chip index.js -o dist/chip.js",
    "compress": "uglifyjs dist/chip.js -c -o dist/chip.min.js",
    "docs": "docco -o docs src/*.js",
    "prepublish": "npm run build",
    "postbuild": "npm run compress && npm run docs"
  },
  "devDependencies": {
    "browserify": "^10.2.1",
    "watchify": "^3.2.1",
    "uglify-js": "^2.4.23",
    "docco": "^0.7.0"
  }
}
